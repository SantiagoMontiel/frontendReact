{
  "name": "platzi-badges",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm-run-all -p client server",
    "client": "react-scripts start",
    "server": "json-server --port 3001 --watch server/db.json",
    "seed": "node server/seed.js",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "cypress:open": "cypress open --config watchForFileChanges=false --project ./test",
    "test:dev": "npm-run-all -l -p start cypress:open",
    "test:headless": "cypress run --spec \"cypress/integration/firstTest.js\" --record",
    "test:report" : "cypress run --project ./test --reporter mocha-multi-reporters --reporter-options configFile=reporter-config.json"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "md5": "^2.2.1",
    "react": "16.8.3",
    "react-dom": "16.8.3",
    "react-router-dom": "4.3.1",
    "react-scripts": "^3.0.1"
  },
  "devDependencies": {
    "cypress": "^3.4.0",
    "faker": "^4.1.0",
    "json-server": "^0.14.2",
    "mocha": "^6.2.0",
    "mocha-junit-reporter": "^1.23.1",
    "mocha-multi-reporters": "^1.1.7",
    "npm-run-all": "^4.1.5"
  },
  "standard": {
    "globals": [
      "describe",
      "cy",
      "it"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
